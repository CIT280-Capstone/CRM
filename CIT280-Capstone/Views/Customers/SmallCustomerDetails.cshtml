@model IEnumerable<CIT280_Capstone.Models.Customer>


<table class="table table-hover">
    <tr>

        <th class="table-header">
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.FirstName).ToString(), "Details", "Customers", new { id = item.ID}, new { @class="table-link" })
        </td>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.LastName).ToString(), "Details", "Customers", new { id = item.ID }, new { @class = "table-link" })
        </td>
        <td>
            @Html.ActionLink(@HtmlHelpers.DisplayForPhone(item.PhoneNumber), "Details", "Customers", new { id = item.ID }, new { @class = "table-link" })
        </td>

    </tr>
}

</table>

<!DOCTYPE html>
<html>


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Papano's Pizza</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="Main Page" />
</head>
<body>
    <div id="wrapper" class="toggled">
        <div class="navbar navbar-inverse navbar-fixed-top center" style="border-bottom:none">
            <div class="container-fluid">
                <div class="navbar-header">
                    @Html.ActionLink("Papano's Pizza", "Index", "Home", new { }, new { @class = "navbar-brand" })
                </div>
            </div>
        </div>
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li>@Html.ActionLink("View Customers", "Index", "Customers")</li>
                <li>@Html.ActionLink("Search For Customer", "Index", "Customers")</li>
                <li>@Html.ActionLink("Add Customer", "Create", "Customers")</li>
            </ul>
        </div>
        <div class="container-fluid body-content" id="page-content-wrapper">
            @RenderBody()
            <div class="row col-md-12">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Team Spy</p>
                </footer>
            </div>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>

    <!--Script for side nav collapse-->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>

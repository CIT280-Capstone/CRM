@model IEnumerable<CIT280_Capstone.Models.Order>
<div class="col-md-12">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-6">
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th class="col-md-3">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.IsDelivery)
                </th>
                <th class="col-md-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="accordian" data-toggle="collapse" href="#subItems" aria-expanded="false" aria-controls="subItems">

                    <td>
                        @Html.DisplayFor(modelitem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDelivery)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
                <tr>
                    <td class="collapse" id="subItems">
                        <div class="well">
                            @{ Html.RenderAction("LineItemsPerOrder", "Orders", new { id = item.ID });}
                        </div>
                    </td>
                </tr>
                        }
        </tbody>
    </table>
</div>
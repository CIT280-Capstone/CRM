@model IEnumerable<CIT280_Capstone.Models.Order>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table">
    <div style="display:table-row">
        <div style="display:table-cell">
            @Html.DisplayNameFor(model => model.ID)
        </div>
        <div style="display:table-cell">
            @Html.DisplayNameFor(model => model.OrderDate)
        </div>
        <div style="display:table-cell">
            @Html.DisplayNameFor(model => model.IsDelivery)
        </div>        
    </div>

@foreach (var item in Model) {
    <a style="display:table-row" role="button" data-toggle="collapse" href="#subItems" >

       <div style="display:table-cell">
           @Html.DisplayFor(modelitem => item.ID)
       </div>
        <div style="display:table-cell">
            @Html.DisplayFor(modelItem => item.OrderDate)
        </div>
        <div style="display:table-cell">
            @Html.DisplayFor(modelItem => item.IsDelivery)
        </div>
        <div style="display:table-cell">
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </div>
    </a>
    <div class="collapse" id="subItems">
        <div class="well">

        </div>
    </div>
}

</div>
